pipeline {
    agent any
    environment {
        NAME = 'PUNEETH KUMAR'
        CITY = 'BANGALORE'
        CLASS = 'JENKINS PIPELINE' 
    parameters {
        string (name:'field' , description:'this is parameters section' , defaultValue:'ABC')

    }
    }
    stages {
        stage ('BUILD') {
            steps {
               sh '''
                pwd
                ls
                du -sh
                free -h
                echo "$CLASS"
            '''
            echo "name=${env.NAME}"
            
            }   
        }
        stage ('DEPLOY') {
            environment {
                DEPLOY="this is from deploy"
            }
            steps {
                sh 'pwd'
                sh 'ls -lrt'
                sh ' echo "$DEPLOY" '
                sh ' echo "$NAME" "$CITY"'
        
                
        
            }
        }
    }

    
}